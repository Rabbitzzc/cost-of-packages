{
    "compilerOptions": {
        "experimentalDecorators": true,
        "jsx": "preserve",
        "removeComments": true,
        "sourceMap": true,
        "typeRoots": [
            "./node_modules/@types"
        ],
        "watch": true,
        "target": "es2020",
        "module": "commonjs",
        "moduleResolution": "node",
        "lib": [
            "es2018"
        ],
    },
    "include": [
        "src/**/*",
        "bin/**/*"
    ],
    "exclude": [
        "node_modules",
        "test"
    ]
}